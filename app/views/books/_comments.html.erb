

    <table>
        <% book.book_comments.each do |book_comment| %>
        <tr>
            <td>
                <%= link_to(book_comment.user) do %>
                    <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                <% end %>
            </td>
            <td>
                <%= book_comment.comment %>
                <% if book_comment.user_id == current_user.id %>
                    <%= link_to 'コメント削除', book_book_comment_path(book_id: book, id: book_comment.id), class: 'btn btn-danger', method: :delete, data: { confirm: '本当に消しますか？' }, remote: true %>    
                <% end %>
            </td>
        </tr>
        <% end %>
    </table>
